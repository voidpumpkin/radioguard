{% extends "frontend/shared/page_wrapper.jinja" %}

{% block head %}
<title>Radioguard</title>
<style>
    .d2h-info {
        display: none;
    }
</style>
<script>
    var map = {{ map }};
    function handle_line_click(self, line) {
        let file_name = self
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .parentElement
            .querySelector(".d2h-file-name")
            .textContent;
        console.log(map[file_name][line]);
    }
</script>
{% endblock %}

{% block body %}
<div id="destination-elem-id"></div>
<script>
    const targetElement = document.getElementById('destination-elem-id');
    const configuration = {
        drawFileList: false,
        matching: 'none',
        fileContentToggle: false,
        outputFormat: 'side-by-side',
        renderNothingWhenEmpty: false,
        colorScheme: 'dark',
        rawTemplates: {{ raw_templates }}
    };
    const diff2htmlUi = new Diff2HtmlUI(targetElement, `{{diff}}`, configuration);
    diff2htmlUi.draw();
</script>
{% call super() %}
{% endblock %}
